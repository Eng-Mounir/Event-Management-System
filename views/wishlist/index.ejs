<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist | EventHub</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .hero-section {
            background: var(--gradient);
            color: white;
            padding: 100px 0;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }
        
        .btn-primary {
            background: var(--gradient);
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
        }
        
        .footer {
            background: #212529;
            color: white;
            margin-top: auto;
        }
        
        .navbar {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .active {
            color: var(--primary) !important;
            font-weight: 600;
        }
        
        /* Wishlist specific styles */
        .wishlist-empty-state {
            padding: 80px 0;
        }
        
        .event-card-img {
            border-radius: 15px 15px 0 0;
            height: 200px;
            object-fit: cover;
        }
        
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
        }
        
        .wishlist-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 2;
        }
        
        .wishlist-icon .btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .category-badge {
            position: absolute;
            bottom: 15px;
            left: 15px;
            z-index: 2;
        }
        
        .position-relative {
            position: relative;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-calendar-event me-2"></i>EventHub
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">
                            <i class="bi bi-calendar3"></i> Events
                        </a>
                    </li>
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/registrations">
                                <i class="bi bi-ticket-perforated"></i> My Tickets
                            </a>
                        </li>
                    <% } %>
                </ul>
                
                <div class="d-flex">
                    <% if (user) { %>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" 
                               data-bs-toggle="dropdown">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px; color: white; font-weight: 600;">
                                    <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                                <span class="ms-2"><%= user.name %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/wishlist">
                                    <i class="bi bi-heart me-2"></i>My Wishlist
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a href="/auth/register" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
    
    <% if (error) { %>
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container py-5">
            <!-- Page Header -->
            <div class="row mb-5">
                <div class="col-lg-8">
                    <h1 class="fw-bold display-5 mb-3">
                        <i class="bi bi-heart text-danger me-3"></i>My Wishlist
                    </h1>
                    <p class="lead text-muted mb-0">
                        Events you've saved for later. Don't miss out on your favorites!
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a href="/events" class="btn btn-primary btn-lg">
                        <i class="bi bi-search me-2"></i>Browse More Events
                    </a>
                </div>
            </div>

            <!-- Wishlist Counter -->
            <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="fw-bold mb-2">
                                <i class="bi bi-bookmark-check text-primary me-2"></i>
                                Saved Events
                            </h5>
                            <p class="text-muted mb-0">
                                You have <span class="fw-bold text-primary"><%= wishlistItems.length %></span> 
                                event<%= wishlistItems.length !== 1 ? 's' : '' %> in your wishlist
                            </p>
                        </div>
                        <% if (wishlistItems.length > 0) { %>
                            <div class="col-md-4 text-end">
                                <form action="/wishlist/clear" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger" 
                                            onclick="return confirm('Are you sure you want to clear all items from your wishlist?')">
                                        <i class="bi bi-trash me-2"></i>Clear All
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Wishlist Items -->
            <% if (wishlistItems && wishlistItems.length > 0) { %>
                <div class="row g-4">
                    <% wishlistItems.forEach(item => { 
                        const event = item.event;
                        if (!event) return;
                    %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="position-relative">
                                    <img src="<%= event.imageUrl || 'https://images.unsplash.com/photo-1511578314322-379afb476865?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80' %>" 
                                         class="card-img-top event-card-img" 
                                         alt="<%= event.title %>">
                                    
                                    <!-- Remove from Wishlist Button -->
                                    <div class="wishlist-icon">
                                        <form action="/events/<%= event.eventId %>/wishlist/remove" method="POST">
                                            <button type="submit" class="btn btn-danger" 
                                                    title="Remove from wishlist">
                                                <i class="bi bi-heart-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                    
                                    <!-- Category Badge -->
                                    <div class="category-badge">
                                        <span class="badge bg-primary p-2">
                                            <i class="bi bi-tag me-1"></i>
                                            <%= event.category ? event.category.charAt(0).toUpperCase() + event.category.slice(1) : 'Event' %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    <h5 class="card-title fw-bold mb-2">
                                        <%= event.title.length > 50 ? event.title.substring(0, 50) + '...' : event.title %>
                                    </h5>
                                    <p class="card-text text-muted small mb-3">
                                        <% if (event.description) { %>
                                            <%= event.description.length > 100 ? event.description.substring(0, 100) + '...' : event.description %>
                                        <% } else { %>
                                            No description available
                                        <% } %>
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <% if (event.date) { %>
                                                <p class="mb-1">
                                                    <i class="bi bi-calendar text-primary me-2"></i>
                                                    <small><%= new Date(event.date).toLocaleDateString() %></small>
                                                </p>
                                            <% } %>
                                            <% if (event.venue) { %>
                                                <p class="mb-0">
                                                    <i class="bi bi-geo-alt text-primary me-2"></i>
                                                    <small><%= event.venue.length > 20 ? event.venue.substring(0, 20) + '...' : event.venue %></small>
                                                </p>
                                            <% } %>
                                        </div>
                                        <div class="text-end">
                                            <h5 class="fw-bold text-primary mb-0">
                                                <% if (event.price === 0) { %>
                                                    FREE
                                                <% } else { %>
                                                    $<%= parseFloat(event.price).toFixed(2) %>
                                                <% } %>
                                            </h5>
                                            <small class="text-muted">per person</small>
                                        </div>
                                    </div>
                                    
                                    <!-- Added Date -->
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-clock-history me-1"></i> 
                                            Saved <%= item.addedDate ? new Date(item.addedDate).toLocaleDateString() : 'recently' %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-white border-0 pt-0">
                                    <div class="d-grid gap-2">
                                        <a href="/events/<%= event.eventId %>" class="btn btn-primary">
                                            <i class="bi bi-eye me-2"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="text-center py-5">
                    <div class="wishlist-empty-state">
                        <div class="mb-4">
                            <i class="bi bi-heart text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Your wishlist is empty</h4>
                        <p class="text-muted mb-4">Start exploring events and save your favorites for later!</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/events" class="btn btn-primary btn-lg">
                                <i class="bi bi-search me-2"></i>Browse Events
                            </a>
                            <a href="/dashboard" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">
                        <i class="bi bi-calendar-event"></i> EventHub
                    </h4>
                    <p class="text-light">
                        Your gateway to amazing events and unforgettable experiences.
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-light mb-0">
                        &copy; 2024 EventHub. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- Wishlist specific JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Confirm before clearing wishlist
            const clearBtn = document.querySelector('button[onclick*="clear all items"]');
            if (clearBtn) {
                clearBtn.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to clear all items from your wishlist?')) {
                        e.preventDefault();
                    }
                });
            }
            
            // Add animation to remove buttons
            const removeButtons = document.querySelectorAll('form[action*="/wishlist/remove"] button');
            removeButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Optional: Add a fade-out animation
                    const card = this.closest('.col-md-6');
                    if (card) {
                        card.style.opacity = '0.5';
                        card.style.transition = 'opacity 0.3s ease';
                    }
                });
            });
        });
    </script>
</body>
</html>