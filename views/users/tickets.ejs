<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Tickets | EventHub</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --success: #2ecc71;
            --warning: #f39c12;
            --danger: #e74c3c;
        }
        
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }
        
        .ticket-card {
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 1.5rem;
        }
        
        .ticket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .ticket-header {
            padding: 1.5rem;
            color: white;
        }
        
        .ticket-qr {
            width: 120px;
            height: 120px;
            background: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }
        
        .payment-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
        }
        
        .ticket-detail-item {
            padding: 0.75rem 0;
            border-bottom: 1px solid #eee;
        }
        
        .ticket-detail-item:last-child {
            border-bottom: none;
        }
        
        .status-badge {
            font-size: 0.7rem;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
        }
        
        .filter-btn.active {
            background: var(--primary);
            color: white;
        }
        
        .empty-state {
            padding: 4rem 1rem;
            text-align: center;
            color: #6c757d;
        }
        
        .ticket-timeline {
            position: relative;
            padding-left: 25px;
        }
        
        .ticket-timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
        
        .timeline-item {
            position: relative;
            margin-bottom: 1rem;
        }
        
        .timeline-dot {
            position: absolute;
            left: -25px;
            top: 5px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 3px solid white;
            z-index: 1;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-calendar-event text-primary me-2"></i>EventHub
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">
                            <i class="bi bi-calendar3"></i> Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/users/tickets">
                            <i class="bi bi-ticket-perforated"></i> My Tickets
                        </a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <% if (user) { %>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" 
                               data-bs-toggle="dropdown">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                     style="width: 35px; height: 35px; color: white; font-weight: 600;">
                                    <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                                <span class="ms-2"><%= user.name %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/dashboard">
                                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                </a></li>
                                <li><a class="dropdown-item" href="/auth/profile">
                                    <i class="bi bi-person-circle me-2"></i>Profile
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <!-- Page Header -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="fw-bold mb-2">
                            <i class="bi bi-ticket-perforated text-primary me-3"></i>
                            My Tickets
                        </h1>
                        <p class="text-muted mb-0">
                            View all your purchased event tickets and payment details
                        </p>
                    </div>
                    <div>
                        <span class="badge bg-light text-dark border">
                            <i class="bi bi-wallet2 me-1"></i>
                            Total Spent: $<%= totalSpent.toFixed(2) %>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                <i class="bi bi-ticket-perforated text-primary fs-4"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0"><%= stats.totalTickets %></h3>
                                <p class="text-muted mb-0">Total Tickets</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0"><%= stats.confirmedTickets %></h3>
                                <p class="text-muted mb-0">Confirmed</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                                <i class="bi bi-clock text-warning fs-4"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0"><%= stats.upcomingEvents %></h3>
                                <p class="text-muted mb-0">Upcoming</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-secondary bg-opacity-10 p-3 me-3">
                                <i class="bi bi-calendar-check text-secondary fs-4"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0"><%= stats.pastEvents %></h3>
                                <p class="text-muted mb-0">Past Events</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Buttons -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary filter-btn active" data-filter="all">
                        All Tickets
                    </button>
                    <button type="button" class="btn btn-outline-primary filter-btn" data-filter="upcoming">
                        Upcoming
                    </button>
                    <button type="button" class="btn btn-outline-primary filter-btn" data-filter="past">
                        Past Events
                    </button>
                    <button type="button" class="btn btn-outline-primary filter-btn" data-filter="confirmed">
                        Confirmed
                    </button>
                    <button type="button" class="btn btn-outline-primary filter-btn" data-filter="cancelled">
                        Cancelled
                    </button>
                </div>
            </div>
        </div>

        <!-- Tickets Grid -->
        <% if (tickets && tickets.length > 0) { %>
            <div class="row" id="tickets-container">
                <% tickets.forEach(ticket => { 
                    const now = new Date();
                    const eventDate = new Date(ticket.event.date);
                    const isUpcoming = eventDate > now;
                    const isPast = eventDate < now;
                    const statusColor = ticket.status === 'confirmed' ? 'success' : 
                                      ticket.status === 'cancelled' ? 'danger' : 'warning';
                    const paymentColor = ticket.paymentStatus === 'completed' ? 'success' : 
                                        ticket.paymentStatus === 'pending' ? 'warning' : 'danger';
                    const qrData = `EVENT-${ticket.event.eventId}-USER-${user.userId}-TICKET-${ticket.registrationId}`;
                %>
                    <div class="col-lg-6 mb-4 ticket-item" 
                         data-status="<%= ticket.status %>" 
                         data-date="<%= eventDate.toISOString() %>"
                         data-upcoming="<%= isUpcoming %>">
                        <div class="card border-0 shadow-sm ticket-card">
                            <!-- Ticket Header with Event Details -->
                            <div class="ticket-header" style="background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h5 class="fw-bold mb-2"><%= ticket.event.title %></h5>
                                        <div class="d-flex align-items-center mb-1">
                                            <i class="bi bi-calendar3 me-2"></i>
                                            <span><%= eventDate.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-clock me-2"></i>
                                            <span><%= ticket.event.time %></span>
                                            <span class="mx-2">â€¢</span>
                                            <i class="bi bi-geo-alt me-1"></i>
                                            <span><%= ticket.event.city %></span>
                                        </div>
                                    </div>
                                    <div class="col-4 text-end">
                                        <span class="badge bg-white text-dark mb-2">
                                            #<%= ticket.registrationId %>
                                        </span>
                                        <div class="ticket-qr">
                                            <i class="bi bi-upc-scan text-dark fs-1"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Ticket Body -->
                            <div class="card-body p-4">
                                <!-- Status and Payment Badges -->
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <span class="badge bg-<%= statusColor %> status-badge">
                                            <i class="bi bi-<%= ticket.status === 'confirmed' ? 'check-circle' : ticket.status === 'cancelled' ? 'x-circle' : 'clock' %> me-1"></i>
                                            <%= ticket.status.toUpperCase() %>
                                        </span>
                                    </div>
                                    <div class="col-6 text-end">
                                        <span class="badge bg-<%= paymentColor %> payment-badge">
                                            <i class="bi bi-credit-card me-1"></i>
                                            <%= ticket.paymentStatus.toUpperCase() %>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Ticket Details -->
                                <div class="mb-4">
                                    <div class="ticket-detail-item">
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Ticket Quantity</small>
                                                <div class="fw-bold"><%= ticket.ticketQuantity %></div>
                                            </div>
                                            <div class="col-6 text-end">
                                                <small class="text-muted">Total Amount</small>
                                                <div class="fw-bold text-success">$<%= ticket.totalAmount.toFixed(2) %></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="ticket-detail-item">
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Payment Method</small>
                                                <div class="fw-bold">
                                                    <i class="bi bi-<%= ticket.paymentMethod === 'credit_card' ? 'credit-card' : 'paypal' %> me-1"></i>
                                                    <%= ticket.paymentMethod === 'credit_card' ? 'Credit Card' : 'PayPal' %>
                                                </div>
                                            </div>
                                            <div class="col-6 text-end">
                                                <small class="text-muted">Booking Date</small>
                                                <div class="fw-bold">
                                                    <%= new Date(ticket.bookingDate).toLocaleDateString() %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <% if (ticket.paymentDetails) { 
                                        const paymentDetails = JSON.parse(ticket.paymentDetails);
                                    %>
                                        <div class="ticket-detail-item">
                                            <small class="text-muted">Transaction ID</small>
                                            <div class="fw-bold text-truncate" style="max-width: 100%;">
                                                <code class="text-primary"><%= paymentDetails.paymentIntentId || paymentDetails.chargeId || 'N/A' %></code>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="row g-2">
                                    <div class="col-4">
                                        <a href="/events/<%= ticket.event.eventId %>" 
                                           class="btn btn-outline-primary w-100">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <button class="btn btn-outline-success w-100" onclick="downloadTicket('<%= ticket.registrationId %>')">
                                            <i class="bi bi-download"></i> Download
                                        </button>
                                    </div>
                                    <% if (isUpcoming && ticket.status === 'confirmed') { %>
                                        <div class="col-4">
                                            <button class="btn btn-outline-danger w-100" 
                                                    onclick="cancelTicket('<%= ticket.registrationId %>')">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        </div>
                                    <% } else if (ticket.status === 'cancelled') { %>
                                        <div class="col-4">
                                            <button class="btn btn-outline-secondary w-100" disabled>
                                                Cancelled
                                            </button>
                                        </div>
                                    <% } else { %>
                                        <div class="col-4">
                                            <button class="btn btn-outline-secondary w-100" disabled>
                                                <i class="bi bi-check"></i> Completed
                                            </button>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Payment Timeline (Optional) -->
                                <% if (ticket.paymentDetails) { 
                                    const paymentDetails = JSON.parse(ticket.paymentDetails);
                                %>
                                    <div class="mt-4 pt-3 border-top">
                                        <h6 class="fw-bold mb-3">
                                            <i class="bi bi-activity me-2"></i>Payment Timeline
                                        </h6>
                                        <div class="ticket-timeline">
                                            <div class="timeline-item">
                                                <div class="timeline-dot bg-success"></div>
                                                <div class="ms-4">
                                                    <small class="text-muted">Booking Confirmed</small>
                                                    <div class="fw-bold"><%= new Date(ticket.bookingDate).toLocaleString() %></div>
                                                </div>
                                            </div>
                                            <% if (paymentDetails.paymentIntentId) { %>
                                                <div class="timeline-item">
                                                    <div class="timeline-dot bg-primary"></div>
                                                    <div class="ms-4">
                                                        <small class="text-muted">Payment Processed</small>
                                                        <div class="fw-bold">
                                                            Transaction: <code class="text-primary"><%= paymentDetails.paymentIntentId.substring(0, 12) %>...</code>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                            <% if (paymentDetails.receiptEmail) { %>
                                                <div class="timeline-item">
                                                    <div class="timeline-dot bg-info"></div>
                                                    <div class="ms-4">
                                                        <small class="text-muted">Receipt Sent</small>
                                                        <div class="fw-bold">Email: <%= paymentDetails.receiptEmail %></div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state">
                <div class="mb-4">
                    <i class="bi bi-ticket-perforated text-muted" style="font-size: 4rem;"></i>
                </div>
                <h3 class="fw-bold mb-3">No tickets yet</h3>
                <p class="text-muted mb-4">
                    You haven't purchased any event tickets yet. Browse events and make your first booking!
                </p>
                <a href="/events" class="btn btn-primary btn-lg">
                    <i class="bi bi-search me-2"></i>Browse Events
                </a>
            </div>
        <% } %>
        
        <!-- Pagination (if needed) -->
        <% if (totalPages > 1) { %>
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/users/tickets?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">
                &copy; 2024 EventHub. All tickets are non-transferable. Always verify event details before attending.
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Filter tickets by status/category
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Update active button
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const filter = this.dataset.filter;
                const tickets = document.querySelectorAll('.ticket-item');
                
                tickets.forEach(ticket => {
                    const isUpcoming = ticket.dataset.upcoming === 'true';
                    const status = ticket.dataset.status;
                    const eventDate = new Date(ticket.dataset.date);
                    const now = new Date();
                    const isPast = eventDate < now;
                    
                    let show = false;
                    
                    switch(filter) {
                        case 'all':
                            show = true;
                            break;
                        case 'upcoming':
                            show = isUpcoming && status === 'confirmed';
                            break;
                        case 'past':
                            show = isPast;
                            break;
                        case 'confirmed':
                            show = status === 'confirmed';
                            break;
                        case 'cancelled':
                            show = status === 'cancelled';
                            break;
                    }
                    
                    ticket.style.display = show ? 'block' : 'none';
                });
            });
        });
        
        // Download ticket function
        function downloadTicket(registrationId) {
            fetch(`/api/tickets/${registrationId}/download`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Create a temporary link to download the PDF
                    const link = document.createElement('a');
                    link.href = data.pdfUrl;
                    link.download = `ticket-${registrationId}.pdf`;
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                } else {
                    alert('Failed to download ticket: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to download ticket. Please try again.');
            });
        }
        
        // Cancel ticket function
        function cancelTicket(registrationId) {
            if (confirm('Are you sure you want to cancel this ticket? This action cannot be undone.')) {
                fetch(`/api/tickets/${registrationId}/cancel`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Ticket cancelled successfully.');
                        location.reload();
                    } else {
                        alert('Failed to cancel ticket: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to cancel ticket. Please try again.');
                });
            }
        }
        
        // Auto-refresh for upcoming tickets (every 5 minutes)
        setInterval(() => {
            const activeFilter = document.querySelector('.filter-btn.active').dataset.filter;
            if (activeFilter === 'upcoming' || activeFilter === 'all') {
                // Refresh the page to update ticket status
                location.reload();
            }
        }, 300000); // 5 minutes
    </script>
</body>
</html>