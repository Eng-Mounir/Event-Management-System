<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Successful - EventHub</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        .confetti {
            position: fixed;
            width: 15px;
            height: 15px;
            background-color: #f0f;
            opacity: 0;
            z-index: 9999;
        }
        .success-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #198754, #20c997);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }
        .ticket-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            overflow: hidden;
        }
        .ticket-qr {
            width: 120px;
            height: 120px;
            background: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-calendar-event text-primary me-2"></i>
                EventHub
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Success Card -->
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5 text-center">
                        <!-- Success Icon -->
                        <div class="success-icon mb-4">
                            <i class="bi bi-check2-all text-white" style="font-size: 3rem;"></i>
                        </div>
                        
                        <!-- Success Message -->
                        <h1 class="fw-bold mb-3">Payment Successful!</h1>
                        <p class="lead text-muted mb-4">
                            Thank you for your purchase. Your tickets for
                            <strong class="text-dark"><%= event.title %></strong>
                            have been confirmed.
                        </p>
                        
                        <!-- Confirmation Details -->
                        <div class="row mb-5">
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="fw-bold text-muted mb-3">
                                            <i class="bi bi-receipt me-2"></i>Order Details
                                        </h6>
                                        <div class="text-start">
                                            <p class="mb-2">
                                                <span class="text-muted">Order ID:</span>
                                                <br>
                                                <strong>#<%= registration.registrationId %></strong>
                                            </p>
                                            <p class="mb-2">
                                                <span class="text-muted">Date:</span>
                                                <br>
                                                <strong><%= new Date().toLocaleDateString() %></strong>
                                            </p>
                                            <p class="mb-2">
                                                <span class="text-muted">Payment Method:</span>
                                                <br>
                                                <strong><%= registration.paymentMethod.toUpperCase() %></strong>
                                            </p>
                                            <p class="mb-0">
                                                <span class="text-muted">Amount Paid:</span>
                                                <br>
                                                <strong class="text-success">$<%= registration.totalAmount %></strong>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="fw-bold text-muted mb-3">
                                            <i class="bi bi-calendar-event me-2"></i>Event Details
                                        </h6>
                                        <div class="text-start">
                                            <p class="mb-2">
                                                <span class="text-muted">Event:</span>
                                                <br>
                                                <strong><%= event.title %></strong>
                                            </p>
                                            <p class="mb-2">
                                                <span class="text-muted">Date & Time:</span>
                                                <br>
                                                <strong>
                                                    <%= new Date(event.date).toLocaleDateString() %>
                                                    at <%= event.time %>
                                                </strong>
                                            </p>
                                            <p class="mb-2">
                                                <span class="text-muted">Location:</span>
                                                <br>
                                                <strong><%= event.location %></strong>
                                            </p>
                                            <p class="mb-0">
                                                <span class="text-muted">Tickets:</span>
                                                <br>
                                                <strong><%= registration.quantity %> ticket(s)</strong>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Digital Ticket -->
                        <div class="ticket-card p-4 mb-5">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-start">
                                    <h4 class="fw-bold mb-2"><%= event.title %></h4>
                                    <p class="mb-2">
                                        <i class="bi bi-calendar3 me-2"></i>
                                        <%= new Date(event.date).toLocaleDateString() %>
                                    </p>
                                    <p class="mb-2">
                                        <i class="bi bi-clock me-2"></i>
                                        <%= event.time %>
                                    </p>
                                    <p class="mb-0">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        <%= event.location %>
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <div class="ticket-qr">
                                        <!-- QR Code would be generated here -->
                                        <div class="text-center">
                                            <i class="bi bi-upc-scan text-dark" style="font-size: 2rem;"></i>
                                            <p class="small text-dark mt-2 mb-0">Ticket QR Code</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Email Confirmation -->
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-envelope-check me-3" style="font-size: 1.5rem;"></i>
                                <div class="text-start">
                                    <h6 class="fw-bold mb-1">Confirmation Sent</h6>
                                    <p class="mb-0">
                                        A confirmation email with your tickets has been sent to
                                        <strong><%= user.email %></strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <a href="/registrations/<%= registration.registrationId %>" 
                               class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-ticket-detailed me-2"></i>
                                View Registration
                            </a>
                            
                            <a href="/events/<%= event.eventId %>/tickets" 
                               class="btn btn-outline-primary btn-lg px-4">
                                <i class="bi bi-download me-2"></i>
                                Download Tickets
                            </a>
                            
                            <a href="/events" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-calendar-plus me-2"></i>
                                Browse More Events
                            </a>
                        </div>
                        
                        <!-- Additional Info -->
                        <div class="mt-5">
                            <h6 class="fw-bold mb-3">What's Next?</h6>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-envelope-paper text-primary mb-3" style="font-size: 2rem;"></i>
                                            <h6 class="fw-bold">Check Email</h6>
                                            <p class="small text-muted mb-0">
                                                Look for your ticket confirmation email
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-printer text-primary mb-3" style="font-size: 2rem;"></i>
                                            <h6 class="fw-bold">Print or Save</h6>
                                            <p class="small text-muted mb-0">
                                                Print tickets or save to mobile wallet
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-question-circle text-primary mb-3" style="font-size: 2rem;"></i>
                                            <h6 class="fw-bold">Need Help?</h6>
                                            <p class="small text-muted mb-0">
                                                Contact support@eventhub.com
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4 border-top">
        <div class="container text-center">
            <p class="text-muted mb-0">
                <i class="bi bi-shield-check me-1"></i>
                Secured by Stripe â€¢ 
                <i class="bi bi-headset ms-3 me-1"></i>
                Need help? support@eventhub.com
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Confetti Effect -->
    <script>
        // Simple confetti effect
        function createConfetti() {
            const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'];
            
            for (let i = 0; i < 150; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-20px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                
                document.body.appendChild(confetti);
                
                // Animation
                const animation = confetti.animate([
                    { 
                        top: '-20px', 
                        opacity: 1,
                        transform: `rotate(${Math.random() * 360}deg)`
                    },
                    { 
                        top: Math.random() * 100 + 'vh', 
                        opacity: 0,
                        transform: `rotate(${Math.random() * 720}deg)`
                    }
                ], {
                    duration: Math.random() * 3000 + 2000,
                    easing: 'cubic-bezier(0.215, 0.610, 0.355, 1)'
                });
                
                // Remove after animation
                animation.onfinish = () => confetti.remove();
            }
        }
        
        // Trigger confetti on page load
        document.addEventListener('DOMContentLoaded', createConfetti);
        
        // Auto-redirect after 30 seconds (optional)
        setTimeout(() => {
            const timer = document.createElement('div');
            timer.className = 'alert alert-warning alert-dismissible fade show position-fixed bottom-0 end-0 m-3';
            timer.innerHTML = `
                <i class="bi bi-clock me-2"></i>
                You will be redirected to your dashboard in 10 seconds...
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(timer);
            
            setTimeout(() => {
                window.location.href = '/dashboard';
            }, 10000);
        }, 30000);
    </script>
</body>
</html>