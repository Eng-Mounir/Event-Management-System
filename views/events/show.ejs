<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= event.title %> - EventHub</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .hero-section {
            background: var(--gradient);
            color: white;
            padding: 100px 0;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }
        
        .btn-primary {
            background: var(--gradient);
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
        }
        
        .footer {
            background: #212529;
            color: white;
            margin-top: auto;
        }
        
        .navbar {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .active {
            color: var(--primary) !important;
            font-weight: 600;
        }
        
        /* Event Details specific styles */
        .info-card {
            background: white;
            transition: transform 0.2s ease;
        }
        
        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .sticky-top {
            position: -webkit-sticky;
            position: sticky;
            z-index: 1020;
        }
        
        .avatar-lg {
            width: 60px;
            height: 60px;
        }
        
        .avatar-sm {
            width: 50px;
            height: 50px;
        }
        
        .event-description p {
            line-height: 1.8;
            margin-bottom: 1rem;
            color: #495057;
        }
        
        .price-details {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }
        
        .breadcrumb {
            background-color: transparent;
            padding-left: 0;
        }
        
        .breadcrumb-item a {
            text-decoration: none;
            color: #4361ee;
        }
        
        .breadcrumb-item.active {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-calendar-event me-2"></i>EventHub
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/events">
                            <i class="bi bi-calendar3"></i> Events
                        </a>
                    </li>
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/registrations">
                                <i class="bi bi-ticket-perforated"></i> My Tickets
                            </a>
                        </li>
                    <% } %>
                </ul>
                
                <div class="d-flex">
                    <% if (user) { %>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" 
                               data-bs-toggle="dropdown">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px; color: white; font-weight: 600;">
                                    <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                                <span class="ms-2"><%= user.name %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a href="/auth/register" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
    
    <% if (error) { %>
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container py-5">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/events">Events</a></li>
                    <li class="breadcrumb-item"><a href="/events?category=<%= event.category %>">
                        <%= event.category.charAt(0).toUpperCase() + event.category.slice(1) %>
                    </a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= event.title %></li>
                </ol>
            </nav>

            <!-- Main Content -->
            <div class="row">
                <!-- Left Column - Event Details -->
                <div class="col-lg-8">
                    <!-- Event Header -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="position-relative">
                            <!-- Event Image -->
                            <img src="<%= event.imageUrl || 'https://images.unsplash.com/photo-1511578314322-379afb476865?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80' %>" 
                                 class="card-img-top" 
                                 alt="<%= event.title %>"
                                 style="height: 400px; object-fit: cover; border-radius: 15px 15px 0 0;">
                            
                            <!-- Action Buttons -->
                            <div class="position-absolute top-0 end-0 m-3">
                                <div class="btn-group shadow-sm" role="group">
                                    <% if (user) { %>
                                        <% if (isWishlisted) { %>
                                            <form action="/events/<%= event.eventId %>/wishlist/remove" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-light rounded-start-pill">
                                                    <i class="bi bi-heart-fill text-danger"></i>
                                                    <span class="d-none d-md-inline ms-1">Saved</span>
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <form action="/events/<%= event.eventId %>/wishlist/add" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-light rounded-start-pill">
                                                    <i class="bi bi-heart"></i>
                                                    <span class="d-none d-md-inline ms-1">Save</span>
                                                </button>
                                            </form>
                                        <% } %>
                                    <% } %>
                                    <button type="button" class="btn btn-light rounded-end-pill" data-bs-toggle="dropdown">
                                        <i class="bi bi-share"></i>
                                        <span class="d-none d-md-inline ms-1">Share</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-facebook me-2"></i>Facebook</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-twitter me-2"></i>Twitter</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-link-45deg me-2"></i>Copy Link</a></li>
                                    </ul>
                                </div>
                            </div>
                            
                            <!-- Category Badge -->
                            <div class="position-absolute bottom-0 start-0 m-3">
                                <span class="badge bg-primary p-3 fs-6">
                                    <i class="bi bi-tag me-1"></i>
                                    <%= event.category.charAt(0).toUpperCase() + event.category.slice(1) %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-body p-4">
                            <!-- Title and Organizer -->
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div>
                                    <h1 class="fw-bold mb-3"><%= event.title %></h1>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3">
                                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                                 style="width: 50px; height: 50px; color: white; font-weight: 600; font-size: 1.2rem;">
                                                <%= event.organizer.name.charAt(0).toUpperCase() %>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="fw-semibold mb-1">Organized by <%= event.organizer.name %></h6>
                                            <p class="text-muted small mb-0">
                                                <i class="bi bi-envelope me-1"></i> <%= event.organizer.email %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Status Badge -->
                                <div class="text-end">
                                    <span class="badge bg-<%= event.status === 'upcoming' ? 'success' : event.status === 'cancelled' ? 'danger' : 'secondary' %> fs-6 p-3">
                                        <%= event.status.charAt(0).toUpperCase() + event.status.slice(1) %>
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Event Info Grid -->
                            <div class="row g-4 mb-4">
                                <div class="col-md-6">
                                    <div class="info-card p-3 rounded-3 border">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                <i class="bi bi-calendar-event text-primary fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-semibold mb-1">Date & Time</h6>
                                                <p class="mb-0">
                                                    <%= new Date(event.date).toLocaleDateString('en-US', { 
                                                        weekday: 'long', 
                                                        year: 'numeric', 
                                                        month: 'long', 
                                                        day: 'numeric' 
                                                    }) %>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="bi bi-clock"></i> <%= event.time %>
                                                    </small>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="info-card p-3 rounded-3 border">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                                <i class="bi bi-geo-alt text-success fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-semibold mb-1">Venue</h6>
                                                <p class="mb-0">
                                                    <%= event.venue %>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="bi bi-geo"></i> <%= event.address %>, <%= event.city %>
                                                    </small>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="info-card p-3 rounded-3 border">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                                                <i class="bi bi-people text-warning fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-semibold mb-1">Available Seats</h6>
                                                <p class="mb-0">
                                                    <% if (event.availableSeats > 0) { %>
                                                        <span class="fw-bold text-success"><%= event.availableSeats %></span> seats available
                                                    <% } else { %>
                                                        <span class="fw-bold text-danger">Sold Out!</span>
                                                    <% } %>
                                                    <br>
                                                    <small class="text-muted">
                                                        Capacity: <%= event.capacity %> attendees
                                                    </small>
                                                </p>
                                                <% if (event.availableSeats > 0) { %>
                                                    <div class="progress mt-2" style="height: 8px;">
                                                        <% const filledPercent = ((event.capacity - event.availableSeats) / event.capacity) * 100; %>
                                                        <div class="progress-bar bg-success" 
                                                             role="progressbar" 
                                                             style="width: <%= filledPercent %>%"
                                                             aria-valuenow="<%= filledPercent %>">
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="info-card p-3 rounded-3 border">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                                                <i class="bi bi-ticket-perforated text-info fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-semibold mb-1">Ticket Price</h6>
                                                <p class="mb-0">
                                                    <% if (event.price === 0) { %>
                                                        <span class="fw-bold text-success fs-4">FREE</span>
                                                    <% } else { %>
                                                        <span class="fw-bold text-primary fs-4">$<%= parseFloat(event.price).toFixed(2) %></span>
                                                        <span class="text-muted">/ person</span>
                                                    <% } %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Event Description -->
                            <div class="mb-5">
                                <h4 class="fw-bold mb-3">About This Event</h4>
                                <div class="event-description">
                                    <p><%= event.description %></p>
                                </div>
                            </div>
                            
                            <!-- Organizer Info -->
                            <div class="card border-0 bg-light mb-4">
                                <div class="card-body p-4">
                                    <h5 class="fw-bold mb-3">
                                        <i class="bi bi-person-badge text-primary me-2"></i>Event Organizer
                                    </h5>
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <div class="avatar-lg">
                                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px; color: white; font-size: 1.5rem; font-weight: 600;">
                                                    <%= event.organizer.name.charAt(0).toUpperCase() %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <h6 class="fw-bold mb-1"><%= event.organizer.name %></h6>
                                            <p class="text-muted small mb-2">
                                                <i class="bi bi-envelope me-1"></i> <%= event.organizer.email %>
                                                <% if (event.organizer.phone) { %>
                                                    <br>
                                                    <i class="bi bi-telephone me-1"></i> <%= event.organizer.phone %>
                                                <% } %>
                                            </p>
                                        </div>
                                        <div class="col-auto">
                                            <a href="mailto:<%= event.organizer.email %>" class="btn btn-outline-primary">
                                                <i class="bi bi-envelope me-1"></i> Contact
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Right Column - Registration & Info -->
                <div class="col-lg-4">
                    <!-- Registration Card -->
                    <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-header bg-primary text-white py-4">
                            <h5 class="fw-bold mb-0">
                                <i class="bi bi-ticket-perforated me-2"></i>Register Now
                            </h5>
                        </div>
                        
                        <div class="card-body p-4">
                            <!-- Status Messages -->
                            <% if (event.availableSeats <= 0) { %>
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    <strong>Sold Out!</strong> All tickets have been purchased.
                                </div>
                            <% } else if (new Date(event.date) < new Date()) { %>
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    This event has already taken place.
                                </div>
                            <% } else if (isRegistered) { %>
                                <div class="alert alert-success">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                                        <div>
                                            <h6 class="fw-bold mb-1">You're Registered!</h6>
                                            <p class="mb-0 small">We'll send you event reminders and updates.</p>
                                        </div>
                                    </div>
                                </div>
                                <a href="/users/registrations" class="btn btn-success w-100 mb-3">
                                    <i class="bi bi-ticket-perforated me-2"></i>View My Tickets
                                </a>
                            <% } else if (user) { %>
                                <!-- Registration Form -->
                                <form action="/events/<%= event.eventId %>/register" method="POST">
                                    <div class="mb-4">
                                        <label class="form-label fw-semibold">
                                            <i class="bi bi-ticket me-2"></i>Number of Tickets
                                        </label>
                                        <select name="ticketQuantity" class="form-select form-select-lg" id="ticketQuantity" required>
                                            <% const maxTickets = Math.min(event.availableSeats, 10); %>
                                            <% for (let i = 1; i <= maxTickets; i++) { %>
                                                <option value="<%= i %>"><%= i %> ticket<%= i > 1 ? 's' : '' %></option>
                                            <% } %>
                                        </select>
                                        <small class="text-muted mt-1 d-block">
                                            <%= event.availableSeats %> seats remaining
                                        </small>
                                    </div>
                                    
                                    <!-- Price Calculator -->
                                    <div class="mb-4">
                                        <label class="form-label fw-semibold">
                                            <i class="bi bi-cash-coin me-2"></i>Price Details
                                        </label>
                                        <div class="price-details bg-light p-3 rounded-3">
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Ticket Price:</span>
                                                <span>$<%= parseFloat(event.price).toFixed(2) %></span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Quantity:</span>
                                                <span id="quantityDisplay">1</span>
                                            </div>
                                            <hr class="my-2">
                                            <div class="d-flex justify-content-between fw-bold fs-5">
                                                <span>Total Amount:</span>
                                                <span id="totalAmount">$<%= parseFloat(event.price).toFixed(2) %></span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Terms -->
                                    <div class="mb-4 form-check">
                                        <input type="checkbox" class="form-check-input" id="terms" required>
                                        <label class="form-check-label small" for="terms">
                                            I agree to the <a href="#" class="text-decoration-none">Terms & Conditions</a> and understand that tickets are non-refundable.
                                        </label>
                                    </div>
                                    
                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="bi bi-lock-fill me-2"></i>Complete Registration
                                    </button>
                                </form>
                            <% } else { %>
                                <!-- Login Required -->
                                <div class="text-center py-4">
                                    <div class="mb-4">
                                        <i class="bi bi-person-circle text-muted" style="font-size: 3rem;"></i>
                                    </div>
                                    <h6 class="fw-bold mb-3">Login Required</h6>
                                    <p class="text-muted mb-4">Please login to register for this event.</p>
                                    <a href="/auth/login?redirect=/events/<%= event.eventId %>" class="btn btn-primary w-100 mb-3">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Login to Register
                                    </a>
                                    <p class="text-muted small mb-0">
                                        Don't have an account? 
                                        <a href="/auth/register" class="text-decoration-none">Sign up</a>
                                    </p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">
                        <i class="bi bi-calendar-event"></i> EventHub
                    </h4>
                    <p class="text-light">
                        Your gateway to amazing events and unforgettable experiences.
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-light mb-0">
                        &copy; 2024 EventHub. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- Event Details specific JavaScript -->
    <script>
        // Dynamic price calculation
        document.addEventListener('DOMContentLoaded', function() {
            const ticketSelect = document.getElementById('ticketQuantity');
            const quantityDisplay = document.getElementById('quantityDisplay');
            const totalAmount = document.getElementById('totalAmount');
            
            if (ticketSelect && totalAmount) {
                const ticketPrice = <%= event.price %>;
                
                function updatePrice() {
                    const quantity = parseInt(ticketSelect.value);
                    const total = (ticketPrice * quantity).toFixed(2);
                    
                    if (quantityDisplay) {
                        quantityDisplay.textContent = quantity;
                    }
                    totalAmount.textContent = `$${total}`;
                }
                
                ticketSelect.addEventListener('change', updatePrice);
                updatePrice(); // Initial calculation
            }
            
            // Form validation
            const form = document.querySelector('form[action*="/register"]');
            if (form) {
                form.addEventListener('submit', function(e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            }
            
            // Add to wishlist animation
            const wishlistButtons = document.querySelectorAll('form[action*="wishlist"] button');
            wishlistButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const icon = this.querySelector('i');
                    if (icon.classList.contains('bi-heart')) {
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill', 'text-danger');
                        this.classList.add('btn-danger');
                        this.classList.remove('btn-light');
                    } else {
                        icon.classList.remove('bi-heart-fill', 'text-danger');
                        icon.classList.add('bi-heart');
                        this.classList.remove('btn-danger');
                        this.classList.add('btn-light');
                    }
                });
            });
