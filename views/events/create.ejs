<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event | EventHub</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .hero-section {
            background: var(--gradient);
            color: white;
            padding: 100px 0;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }
        
        .btn-primary {
            background: var(--gradient);
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
        }
        
        .footer {
            background: #212529;
            color: white;
            margin-top: auto;
        }
        
        .navbar {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .active {
            color: var(--primary) !important;
            font-weight: 600;
        }
        
        /* Create Event specific styles */
        .step {
            text-align: center;
            position: relative;
            flex: 1;
        }
        
        .step-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            border: 2px solid #dee2e6;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .step.active .step-icon {
            background: #4361ee;
            color: white;
            border-color: #4361ee;
        }
        
        .step-label {
            font-size: 0.9rem;
            color: #6c757d;
        }
        
        .step.active .step-label {
            color: #4361ee;
            font-weight: 600;
        }
        
        .step-line {
            flex: 1;
            height: 2px;
            background: #dee2e6;
            margin: 20px 10px 0;
        }
        
        .form-control-lg {
            border-radius: 10px;
            padding: 15px;
        }
        
        .form-control:focus {
            border-color: #4361ee;
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }
        
        textarea.form-control {
            min-height: 150px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-calendar-event me-2"></i>EventHub
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">
                            <i class="bi bi-calendar3"></i> Events
                        </a>
                    </li>
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/registrations">
                                <i class="bi bi-ticket-perforated"></i> My Tickets
                            </a>
                        </li>
                    <% } %>
                </ul>
                
                <div class="d-flex">
                    <% if (user) { %>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" 
                               data-bs-toggle="dropdown">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px; color: white; font-weight: 600;">
                                    <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                                <span class="ms-2"><%= user.name %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a href="/auth/register" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
    
    <% if (error) { %>
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!-- Progress Steps -->
                    <div class="card border-0 shadow-sm mb-5">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="step active">
                                    <div class="step-icon bg-primary text-white">1</div>
                                    <div class="step-label fw-semibold">Basic Info</div>
                                </div>
                                <div class="step-line"></div>
                                <div class="step">
                                    <div class="step-icon">2</div>
                                    <div class="step-label">Details</div>
                                </div>
                                <div class="step-line"></div>
                                <div class="step">
                                    <div class="step-icon">3</div>
                                    <div class="step-label">Tickets</div>
                                </div>
                                <div class="step-line"></div>
                                <div class="step">
                                    <div class="step-icon">4</div>
                                    <div class="step-label">Publish</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Event Creation Form -->
                    <div class="card border-0 shadow">
                        <div class="card-header bg-white border-0 py-4">
                            <h2 class="fw-bold mb-0">
                                <i class="bi bi-plus-circle me-2"></i>Create New Event
                            </h2>
                            <p class="text-muted mb-0">Fill in the details below to create your event</p>
                        </div>
                        
                        <div class="card-body p-5">
                            <form action="/events/create" method="POST" class="needs-validation" novalidate>
                                <!-- Basic Information -->
                                <div class="mb-5">
                                    <h4 class="fw-bold mb-4">
                                        <span class="badge bg-primary rounded-circle p-2 me-2">1</span>
                                        Basic Information
                                    </h4>
                                    
                                    <div class="row">
                                        <div class="col-md-8 mb-4">
                                            <label for="title" class="form-label fw-semibold">
                                                <i class="bi bi-pencil-square me-2"></i>Event Title
                                            </label>
                                            <input type="text" 
                                                   class="form-control form-control-lg" 
                                                   id="title" 
                                                   name="title" 
                                                   placeholder="Enter a catchy title for your event"
                                                   required>
                                            <div class="invalid-feedback">
                                                Please enter an event title.
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-4 mb-4">
                                            <label for="category" class="form-label fw-semibold">
                                                <i class="bi bi-tag me-2"></i>Category
                                            </label>
                                            <select class="form-select form-select-lg" id="category" name="category" required>
                                                <option value="">Select Category</option>
                                                <option value="concert">Concert</option>
                                                <option value="conference">Conference</option>
                                                <option value="workshop">Workshop</option>
                                                <option value="sports">Sports</option>
                                                <option value="festival">Festival</option>
                                                <option value="exhibition">Exhibition</option>
                                            </select>
                                            <div class="invalid-feedback">
                                                Please select a category.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label for="description" class="form-label fw-semibold">
                                            <i class="bi bi-text-paragraph me-2"></i>Event Description
                                        </label>
                                        <textarea class="form-control" 
                                                  id="description" 
                                                  name="description" 
                                                  rows="5"
                                                  placeholder="Describe your event in detail. What can attendees expect?"
                                                  required></textarea>
                                        <div class="invalid-feedback">
                                            Please enter an event description.
                                        </div>
                                        <div class="form-text">Minimum 100 characters recommended.</div>
                                    </div>
                                </div>
                                
                                <!-- Date & Time -->
                                <div class="mb-5">
                                    <h4 class="fw-bold mb-4">
                                        <span class="badge bg-primary rounded-circle p-2 me-2">2</span>
                                        Date & Time
                                    </h4>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label for="date" class="form-label fw-semibold">
                                                <i class="bi bi-calendar-date me-2"></i>Event Date
                                            </label>
                                            <input type="date" 
                                                   class="form-control form-control-lg" 
                                                   id="date" 
                                                   name="date" 
                                                   required>
                                            <div class="invalid-feedback">
                                                Please select an event date.
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6 mb-4">
                                            <label for="time" class="form-label fw-semibold">
                                                <i class="bi bi-clock me-2"></i>Event Time
                                            </label>
                                            <input type="time" 
                                                   class="form-control form-control-lg" 
                                                   id="time" 
                                                   name="time" 
                                                   required>
                                            <div class="invalid-feedback">
                                                Please select an event time.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Venue Details -->
                                <div class="mb-5">
                                    <h4 class="fw-bold mb-4">
                                        <span class="badge bg-primary rounded-circle p-2 me-2">3</span>
                                        Venue Details
                                    </h4>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label for="venue" class="form-label fw-semibold">
                                                <i class="bi bi-building me-2"></i>Venue Name
                                            </label>
                                            <input type="text" 
                                                   class="form-control form-control-lg" 
                                                   id="venue" 
                                                   name="venue" 
                                                   placeholder="e.g., Convention Center"
                                                   required>
                                            <div class="invalid-feedback">
                                                Please enter a venue name.
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6 mb-4">
                                            <label for="city" class="form-label fw-semibold">
                                                <i class="bi bi-geo-alt me-2"></i>City
                                            </label>
                                            <input type="text" 
                                                   class="form-control form-control-lg" 
                                                   id="city" 
                                                   name="city" 
                                                   placeholder="e.g., New York"
                                                   required>
                                            <div class="invalid-feedback">
                                                Please enter a city.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label for="address" class="form-label fw-semibold">
                                            <i class="bi bi-geo me-2"></i>Full Address
                                        </label>
                                        <input type="text" 
                                               class="form-control form-control-lg" 
                                               id="address" 
                                               name="address" 
                                               placeholder="123 Main Street, Suite 100"
                                               required>
                                        <div class="invalid-feedback">
                                            Please enter a full address.
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Ticket Information -->
                                <div class="mb-5">
                                    <h4 class="fw-bold mb-4">
                                        <span class="badge bg-primary rounded-circle p-2 me-2">4</span>
                                        Ticket Information
                                    </h4>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label for="capacity" class="form-label fw-semibold">
                                                <i class="bi bi-people me-2"></i>Total Capacity
                                            </label>
                                            <input type="number" 
                                                   class="form-control form-control-lg" 
                                                   id="capacity" 
                                                   name="capacity" 
                                                   min="1"
                                                   placeholder="Maximum attendees"
                                                   required>
                                            <div class="invalid-feedback">
                                                Please enter a valid capacity (minimum 1).
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6 mb-4">
                                            <label for="price" class="form-label fw-semibold">
                                                <i class="bi bi-cash me-2"></i>Ticket Price ($)
                                            </label>
                                            <input type="number" 
                                                   class="form-control form-control-lg" 
                                                   id="price" 
                                                   name="price" 
                                                   min="0"
                                                   step="0.01"
                                                   placeholder="0.00"
                                                   required>
                                            <div class="invalid-feedback">
                                                Please enter a valid price.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Additional Information -->
                                <div class="mb-5">
                                    <h4 class="fw-bold mb-4">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Additional Information
                                    </h4>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label for="registrationDeadline" class="form-label fw-semibold">
                                                <i class="bi bi-calendar-check me-2"></i>Registration Deadline
                                            </label>
                                            <input type="date" 
                                                   class="form-control" 
                                                   id="registrationDeadline" 
                                                   name="registrationDeadline">
                                            <div class="form-text">Leave empty for no deadline</div>
                                        </div>
                                        
                                        <div class="col-md-6 mb-4">
                                            <label for="imageUrl" class="form-label fw-semibold">
                                                <i class="bi bi-image me-2"></i>Event Image URL
                                            </label>
                                            <input type="url" 
                                                   class="form-control" 
                                                   id="imageUrl" 
                                                   name="imageUrl"
                                                   placeholder="https://example.com/image.jpg">
                                            <div class="form-text">Optional: Link to event image</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Submit Buttons -->
                                <div class="d-flex justify-content-between pt-4 border-top">
                                    <a href="/events" class="btn btn-outline-secondary btn-lg px-5">
                                        <i class="bi bi-x-circle me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-5">
                                        <i class="bi bi-check-circle me-2"></i>Create Event
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">
                        <i class="bi bi-calendar-event"></i> EventHub
                    </h4>
                    <p class="text-light">
                        Your gateway to amazing events and unforgettable experiences.
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-light mb-0">
                        &copy; 2024 EventHub. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- Form validation and date handling -->
    <script>
        // Form validation
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
        
        // Set minimum date to today
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('date').min = today;
            
            if (document.getElementById('registrationDeadline')) {
                document.getElementById('registrationDeadline').min = today;
            }
        });
    </script>
</body>
</html>