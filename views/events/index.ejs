<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events | EventHub</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .hero-section {
            background: var(--gradient);
            color: white;
            padding: 100px 0;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }
        
        .btn-primary {
            background: var(--gradient);
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
        }
        
        .footer {
            background: #212529;
            color: white;
            margin-top: auto;
        }
        
        .navbar {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .active {
            color: var(--primary) !important;
            font-weight: 600;
        }
        
        /* Events specific styles */
        .event-card-img {
            border-radius: 15px 15px 0 0;
        }
        
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-calendar-event me-2"></i>EventHub
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/events">
                            <i class="bi bi-calendar3"></i> Events
                        </a>
                    </li>
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/registrations">
                                <i class="bi bi-ticket-perforated"></i> My Tickets
                            </a>
                        </li>
                    <% } %>
                </ul>
                
                <div class="d-flex">
                    <% if (user) { %>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" 
                               data-bs-toggle="dropdown">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px; color: white; font-weight: 600;">
                                    <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                                <span class="ms-2"><%= user.name %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a href="/auth/register" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
    
    <% if (error) { %>
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container py-5">
            <!-- Page Header -->
            <div class="row mb-5">
                <div class="col-lg-8">
                    <h1 class="fw-bold display-5 mb-3">Discover Amazing Events</h1>
                    <p class="lead text-muted mb-0">
                        Find events that match your interests. Filter by category, date, or location.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <% if (user && user.role === 'organizer') { %>
                        <a href="/events/create" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Create Event
                        </a>
                    <% } %>
                </div>
            </div>

            <!-- Filters -->
            <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-4">
                    <form action="/events" method="GET" class="row g-3 align-items-center">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-filter me-2"></i>Category
                            </label>
                            <select name="category" class="form-select">
                                <option value="">All Categories</option>
                                <option value="concert" <%= filters.category === 'concert' ? 'selected' : '' %>>Concert</option>
                                <option value="conference" <%= filters.category === 'conference' ? 'selected' : '' %>>Conference</option>
                                <option value="workshop" <%= filters.category === 'workshop' ? 'selected' : '' %>>Workshop</option>
                                <option value="sports" <%= filters.category === 'sports' ? 'selected' : '' %>>Sports</option>
                                <option value="festival" <%= filters.category === 'festival' ? 'selected' : '' %>>Festival</option>
                                <option value="exhibition" <%= filters.category === 'exhibition' ? 'selected' : '' %>>Exhibition</option>
                            </select>
                        </div>
                        
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-calendar me-2"></i>Date
                            </label>
                            <input type="date" name="date" class="form-control" value="<%= filters.date || '' %>">
                        </div>
                        
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-search me-2"></i>Search
                            </label>
                            <input type="text" name="search" class="form-control" placeholder="Search events..." value="<%= filters.search || '' %>">
                        </div>
                        
                        <div class="col-md-1">
                            <label class="form-label fw-semibold">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-funnel"></i>
                            </button>
                        </div>
                    </form>
                    
                    <!-- Category Chips -->
                    <div class="mt-4">
                        <h6 class="fw-semibold mb-2">Quick Categories:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/events?category=concert" class="badge bg-primary bg-opacity-10 text-primary p-3 text-decoration-none">
                                <i class="bi bi-music-note-beamed me-2"></i>Concert
                            </a>
                            <a href="/events?category=conference" class="badge bg-success bg-opacity-10 text-success p-3 text-decoration-none">
                                <i class="bi bi-laptop me-2"></i>Conference
                            </a>
                            <a href="/events?category=workshop" class="badge bg-warning bg-opacity-10 text-warning p-3 text-decoration-none">
                                <i class="bi bi-tools me-2"></i>Workshop
                            </a>
                            <a href="/events?category=sports" class="badge bg-danger bg-opacity-10 text-danger p-3 text-decoration-none">
                                <i class="bi bi-trophy me-2"></i>Sports
                            </a>
                            <a href="/events?category=festival" class="badge bg-info bg-opacity-10 text-info p-3 text-decoration-none">
                                <i class="bi bi-emoji-sunglasses me-2"></i>Festival
                            </a>
                            <a href="/events?category=exhibition" class="badge bg-secondary bg-opacity-10 text-secondary p-3 text-decoration-none">
                                <i class="bi bi-palette me-2"></i>Exhibition
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Events Grid -->
            <% if (events && events.length > 0) { %>
                <div class="row g-4">
                    <% events.forEach(event => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="position-relative">
                                    <img src="<%= event.imageUrl || 'https://images.unsplash.com/photo-1511578314322-379afb476865?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80' %>" 
                                         class="card-img-top event-card-img" 
                                         alt="<%= event.title %>"
                                         style="height: 200px; object-fit: cover;">
                                    <div class="position-absolute top-0 end-0 m-3">
                                        <span class="badge bg-<%= event.status === 'upcoming' ? 'success' : 'secondary' %>">
                                            <%= event.status %>
                                        </span>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <span class="badge bg-primary">
                                            <%= event.category %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    <h5 class="card-title fw-bold mb-2">
                                        <%= event.title.length > 50 ? event.title.substring(0, 50) + '...' : event.title %>
                                    </h5>
                                    <p class="card-text text-muted small mb-3">
                                        <%= event.description.length > 100 ? event.description.substring(0, 100) + '...' : event.description %>
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <p class="mb-1">
                                                <i class="bi bi-calendar text-primary me-2"></i>
                                                <small><%= new Date(event.date).toLocaleDateString() %></small>
                                            </p>
                                            <p class="mb-0">
                                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                                <small><%= event.venue %></small>
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <h5 class="fw-bold text-primary mb-0">
                                                <% if (event.price === 0) { %>
                                                    FREE
                                                <% } else { %>
                                                    $<%= parseFloat(event.price).toFixed(2) %>
                                                <% } %>
                                            </h5>
                                            <small class="text-muted">per person</small>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-people me-1"></i> 
                                            <%= event.availableSeats %>/<%= event.capacity %> seats
                                        </span>
                                        <span class="small text-muted">
                                            By <%= event.organizer.name %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-white border-0 pt-0">
                                    <a href="/events/<%= event.eventId %>" class="btn btn-primary w-100">
                                        <i class="bi bi-ticket-perforated me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
                <% if (events.length === 0) { %>
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-3">No Events Found</h4>
                        <p class="text-muted mb-4">Try adjusting your filters or check back later.</p>
                        <a href="/events" class="btn btn-primary">Clear Filters</a>
                    </div>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-calendar-plus text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="fw-bold mb-3">No Events Yet</h4>
                    <p class="text-muted mb-4">Be the first to create an amazing event!</p>
                    <% if (user && user.role === 'organizer') { %>
                        <a href="/events/create" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Create Your First Event
                        </a>
                    <% } else if (user) { %>
                        <p class="text-muted">Switch to organizer account to create events.</p>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Join as Organizer
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-3">
                        <i class="bi bi-calendar-event"></i> EventHub
                    </h4>
                    <p class="text-light">
                        Your gateway to amazing events and unforgettable experiences.
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-light mb-0">
                        &copy; 2024 EventHub. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
</body>
</html>